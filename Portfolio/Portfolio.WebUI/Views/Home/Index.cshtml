@model IndexViewModel
@{
    ViewData["Title"] = "Index";
}

<div role="tabpanel" class="tab-pane fade in active" id="about-me">
    <div class="inside-sec">
        <!-- BIO AND SKILLS -->
        <h5 class="tittle">About Me</h5>

        <!-- Blog -->
        <section class="about-me padding-top-10">

            <!-- Personal Info -->
            <ul class="personal-info">
                <li>
                    <p> <span> Name</span> @Model.PersonalDetails.Name</p>
                </li>
                <li>
                    <p> <span> Age</span> @Model.PersonalDetails.Age</p>
                </li>
                <li>
                    <p> <span> Location</span>@Model.PersonalDetails.Location</p>
                </li>
                <li>
                    <p> <span> Experience</span> @Model.PersonalDetails.Experience</p>
                </li>
                <li>
                    <p> <span> Degree</span>@Model.PersonalDetails.Degree </p>
                </li>
                <li>
                    <p> <span> Career Level</span>@Model.PersonalDetails.CareerLevel </p>
                </li>
                <li>
                    <p> <span> Phone</span>@Model.PersonalDetails.Phone </p>
                </li>
                <li>
                    <p> <span> FAX</span>@Model.PersonalDetails.Fax </p>
                </li>
                <li>
                    <p> <span> E-mail</span> <a href="#.">@Model.PersonalDetails.Email</a> </p>
                </li>
                <li>
                    <p> <span> Website</span><a href="#."> @Model.PersonalDetails.Website </a></p>
                </li>
            </ul>

            <!-- I’m Web Designer -->
            <h5 class="tittle">@Model.PersonalDetails.Occupation</h5>
            <div class="padding-20">
                @Html.Raw(Model.PersonalDetails.About)
            </div>
            <!-- Services -->
            <h5 class="tittle">Services</h5>
            <div class="row padding-20 margin-top-50">
                @foreach (var item in Model.Services)
                {
                    <div class="col-md-4 text-center">
                        <div class="icon-box i-large ib-black">
                            <div class="ib-icon"> <i class="@item.Icons.FirstOrDefault(i=>i.ServiceId==item.Id).IconLink"></i> </div>
                            <div class="ib-info">
                                <h4 class="h6">@item.ServiceName</h4>
                                <p>@item.Description</p>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Skills -->
            <h5 class="tittle">Skills</h5>

            <!-- Sound Engineering -->
            <div class="panel-group accordion padding-20" id="accordion">

                @foreach (var item in Model.Skills)
                {
                    <div class="panel panel-default">
                        <div class="row">
                            <div class="col-sm-4">
                                <!-- PANEL HEADING -->
                                <div class="panel-heading">
                                    <h4 class="panel-title"> <a data-toggle="collapse" data-parent="#accordion" href="#@item.Id" class="collapsed">@item.SkillName</a> </h4>
                                </div>
                            </div>
                            <!-- Skillls Bars -->
                            <div class="col-sm-8">
                                <div class="progress">
                                    <div class="progress-bar" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: @item.SkillPercentage;"> <span class="sr-only">60% Complete</span> </div>
                                </div>

                                <!-- Skillls Text -->
                                <div id="@item.Id" class="collapse collapsed">
                                    <div class="panel-body">
                                        <p>@item.SkillDescription</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>
    </div>
</div>


