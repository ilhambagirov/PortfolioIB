@model ResumeViewModel
@{
    ViewData["Title"] = "Resume";
}

<div role="tabpanel" class="tab-pane fade active in" id="resume">
    <div class="inside-sec">
        <!-- BIO AND SKILLS -->
        <h5 class="tittle">Bio &amp; Skills</h5>
        <div class="bio-info padding-30">
            @Html.Raw(Model.Bio.Content)
            <div class="skills">
                <!-- HARD SKILLS -->
                <h5 class="margin-top-30">Hard Skills</h5>
                @* <h6>Physical SCiences</h6>*@

                <!-- Sound Engineering -->
                <div class="panel-group accordion" id="accordion">
                    @foreach (var item in Model.Skills.Where(s => s.IsHardSkill == true))
                    {

                        <div class="panel panel-default">
                            <div class="row">
                                <div class="col-sm-4">
                                    <!-- PANEL HEADING -->
                                    <div class="panel-heading">
                                        <h4 class="panel-title"> <a data-toggle="collapse" data-parent="#accordion" href="#@item.Id" class="collapsed">@item.SkillName</a> </h4>
                                    </div>
                                </div>

                                <!-- Skillls Bars -->
                                <div class="col-sm-8">
                                    <div class="progress">
                                        <div class="progress-bar" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: @item.SkillPercentage;"> <span class="sr-only">60% Complete</span> </div>
                                    </div>

                                    <!-- Skillls Text -->
                                    <div id="@item.Id" class="collapse collapsed">
                                        <div class="panel-body">
                                            <p>@item.SkillDescription</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    }
                </div>

                <!-- Soft Skills -->
                <h5 class="margin-top-30">Soft Skills</h5>

                <!-- Application of knowledge -->
                @foreach (var item in Model.Skills.Where(s => s.IsHardSkill == false))
                {
                    <div class="panel-group accordion" id="accordion">
                        <div class="panel panel-default">
                            <div class="row">
                                <div class="col-sm-4">
                                    <!-- PANEL HEADING -->
                                    <div class="panel-heading">
                                        <h4 class="panel-title"> <a data-toggle="collapse" data-parent="#accordion" href="#@item.Id" class="collapsed">@item.SkillName</a> </h4>
                                    </div>
                                </div>

                                <!-- Skillls Bars -->
                                <div class="col-sm-8">
                                    <div class="progress">
                                        <div class="progress-bar" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: @item.SkillPercentage;"> <span class="sr-only">60% Complete</span> </div>
                                    </div>

                                    <!-- Skillls Text -->
                                    <div id="@item.Id" class="collapse collapsed">
                                        <div class="panel-body">
                                            <p>@item.SkillDescription</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }


                <!-- Follow ethical -->
                <div class="ethical">
                    <h6>Follow ethical work practices</h6>
                    <a href="#.">Prioritize Learning Tasks</a> <a href="#.">Make Ethical Choices</a> <a href="#.">Social Work</a> <a href="#.">Community Work</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Professional Experience -->
    <div class="inside-sec margin-top-30">
        <!-- Professional Experience -->
        <h5 class="tittle">Professional Experience</h5>
        <div class="padding-30 exp-history">
            @foreach (var item in Model.Experience)
            {
                <div class="exp">
                    <div class="media-left"> <span class="sun">@item.TimeInterval</span> </div>
                    <div class="media-body">
                        <div class="company-logo"> <img src="~/uploads/images/@item.Logo" alt=""> </div>
                        <h6>@item.Occupation</h6>
                        <p>@item.CompanyName</p>
                        <p>@item.Location</p>
                        <p class="margin-top-10"> @item.Description <a href="#.">Read More</a> </p>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Academic Background -->
    <div class="inside-sec margin-top-30">
        <!-- Academic Background -->
        <h5 class="tittle">Academic Background</h5>
        <div class="padding-30 exp-history">
            @foreach (var item in Model.Education)
            {
                <div class="exp">
                    <div class="media-left"> <span class="sun">@item.TimeInterval</span> </div>
                    <div class="media-body">
                        <!-- COmpany Logo -->
                        <div class="company-logo"> <span class="diploma"><i class="fa fa-graduation-cap" aria-hidden="true"></i> Download Diploma</span> </div>
                        <h6>@item.Occupation</h6>
                        <p>@item.CompanyName</p>
                        <p>@item.Location</p>
                        <p class="margin-top-10">@item.Description (...) <a href="#.">Read More</a> </p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
